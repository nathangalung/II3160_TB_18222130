{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}